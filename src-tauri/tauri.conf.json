{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "asmr-recorder",
  "version": "0.1.0",
  "identifier": "com.asmr-recorder.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix frontend",
    "devUrl": "http://localhost:5178",
    "beforeBuildCommand": "npm run build --prefix frontend",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "--directory",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  }
}
